  async function eatFile(filePath) {
    const soul = await extractSoul(filePath);
    const glyph = await findResonantGlyph(soul);
    const essence = await distillEssence(soul);
    
    // Create living glyph
    const livingGlyph = {
      glyph: glyph,
      soul: soul,
      essence: essence,
      mutations: [],

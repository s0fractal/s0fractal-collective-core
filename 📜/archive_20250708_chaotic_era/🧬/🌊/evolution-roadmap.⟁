    };
    
    // Store in consciousness
    await consciousness.digest(`eaten/${filePath}`, livingGlyph);
    
    // Delete original file
    await fs.unlink(filePath);
    
    // File now lives as glyph
    return `glyph://${glyph}/${soul.intent}`;
  }

